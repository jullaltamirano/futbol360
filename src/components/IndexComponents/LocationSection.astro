---
import type { Location } from "../../interfaces/location.interface"

import { LocationModal } from "./LocationComponents/LocationModal.tsx"

const locations: Location[] = [
   {
      name: "Estadio Julio Montjoy",
      address: "Jr. Santo Cristo 584 - Santiago de Surco",
      image: "/images/julio-montjoy.jpg",
      latitude: -12.1457316,
      longitude: -77.000545,
      googleMaps: "https://maps.app.goo.gl/ym8aPc6ScQDNg2kV9",
   },
   {
      name: "Colegio Alfonso Ugarte",
      address: "Chacarilla 591 - San Isidro",
      image: "/images/alfonso-ugarte.jpg",
      latitude: -12.1006105,
      longitude: -77.0278991,
      googleMaps: "https://maps.app.goo.gl/SPUhEBMhePBKdrMZ8",
   },
