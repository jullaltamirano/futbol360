---
import type { Sponsor } from '../../interfaces/sponsor.interface';

const sponsors: Sponsor[] = [
  { id: 1, name: 'FisioDepor', logoUrl: '/images/sponsor1.svg' },
  { id: 2, name: 'Loa', logoUrl: '/images/sponsor2.svg' },
  { id: 3, name: 'Generade', logoUrl: '/images/sponsor3.svg' },
];
---

<section class="py-12 bg-gray-50">
   <div class="container mx-auto px-4 md:px-6">
      <div class="flex flex-col items-center justify-center space-y-4 text-center mb-8">
         <h2 class="text-2xl font-bold tracking-tighter sm:text-3xl">Nuestros Patrocinadores</h2>
         <p class="max-w-[700px] text-gray-500">Empresas que conf√≠an en nuestro proyecto deportivo</p>
      </div>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12">
         {
            sponsors.map(( sponsor ) => (
               <div class="relative h-16 w-32 grayscale transition-all hover:grayscale-0">
                  <img
                     src={ sponsor.logoUrl }
                     alt={`Patrocinador ${ sponsor.name }`}
                     loading="lazy"
                     class="object-contain w-full h-full"
                  />
               </div>
            ))
         }
      </div>
   </div>
</section>