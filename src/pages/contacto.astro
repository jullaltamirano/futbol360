<main class="flex min-h-screen flex-col">
   <Navbar />
   <WhatsappButton />

   {/* Hero Banner */}
   <section class="relative py-20 text-white">
      {/* Background Image */}
      <div class="absolute inset-0 z-0">
         <img
            src="/images/nosotros-banner.jpg"
            alt="Contacto Futbol360"
            class="object-cover brightness-40 w-full h-full absolute inset-0"
            loading="eager"
            style="object-fit: cover; width: 100%; height: 100%;"
         />
      </div>

      {/* Content */}
      <div class="container relative z-10 mx-auto px-4 md:px-6">
         <div class="max-w-3xl mx-auto text-center space-y-6">
            <h1 class="text-4xl font-bold tracking-tighter sm:text-5xl md:text-6xl drop-shadow-md">Contáctanos</h1>
            <p class="max-w-[700px] mx-auto text-lg text-yellow-50 md:text-xl drop-shadow-md">
               Estamos aquí para responder tus preguntas y ayudarte a comenzar tu entrenamiento
            </p>
         </div>
      </div>
   </section>

   {/* Contact Form Section */}
   <section class="py-20">
      <div class="container mx-auto px-4 md:px-6">
         <div class="grid gap-12 md:grid-cols-5 items-start">
            <div class="col-span-5 md:col-span-3 col-start-1 md:col-start-2">
               <div class="space-y-6">
                  <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl">Envíanos un mensaje</h2>
                  <p class="text-gray-500 md:text-lg">
                     Completa el formulario y nos pondremos en contacto contigo lo antes posible.
                  </p>
               </div>
               <div>
                  <ContactForm />
               </div>
            </div>
         </div>
      </div>
   </section>

   {/* Locations Section */}
   <LocationSection />

